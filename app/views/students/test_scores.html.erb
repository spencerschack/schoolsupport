<div class="title">
  <h2>Student</h2>
  <h1><%= @student.name %></h1>
  <%= link_for :fullscreen, @student %>
  <%= link_for :back, controller_model %>
</div>

<div class="scroller">
  <div class="left_col">
    <div class="fields">
      <%= image_tag(@student.image) %>
      <% FIELDS[:students][:show][:fields].each do |field| %>
        <%= field_content @student, field %>
      <% end %>
    </div>
    <%= render 'notes' %>
  </div>
  <div class="right_col">
    <%= render 'tests' %>
    <%= render 'interventions' %>
</div>