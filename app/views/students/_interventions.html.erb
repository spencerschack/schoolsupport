<div class="interventions">
  <h2>Interventions</h2>
  <%= form_for @student, class: 'special_handler' do |f| %>
    <div class="table">
      <div>
        <span>Name</span>
        <span>Start</span>
        <span>Stop</span>
        <span>Notes</span>
      </div>
      <% sort_interventions(@student.interventions).each do |intervention| %>
        <%= f.fields_for :interventions, intervention do |i| %>
          <a class="intervention">
            <span><%= i.text_area :name %></span>
            <span><%= i.text_area :start %></span>
            <span><%= i.text_area :stop %></span>
            <span><%= i.text_area :notes %></span>
          </a>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>