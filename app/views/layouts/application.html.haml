!!! 5
%html
	%head
		%title Shoob Photography School Support
		= stylesheet_link_tag    'application', media: 'all'
		= javascript_include_tag 'application'
		= csrf_meta_tags
		= tag :meta, name: :initial_path, content: flash[:initial_path] || '/'
	%body
		#container
			#header.page{data: { path: '/' }}
				%h1=link_to 'Shoob Photography School Support', root_path
				= render('navigation') if current_user
			= yield
		#footer
			&copy; 2012 Shoob Photography
			| Developed by #{link_to 'spencerschack.com', 'http://spencerschack.com/'}
