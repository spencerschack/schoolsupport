.title
	%h2 Export
	%h1= export_title
	= link_for :cancel, controller_model

.scroller
	%h6 Request
	= link_to 'Send a Request', '/export_list_items/export/request'
	- if available_types.any?
		%h6 Templates
		- available_types.each do |type|
			= link_to type.name, "/export_list_items/export/print/#{type.id}"
	- if permitted_to?(:zpass, controller_model)
		%h6 Zpass
		= link_to 'Zpass', '/export_list_items/export/zpass'