<html>
  <head>
    <% if @pending %>
      <script type="text/javascript">
        setTimeout(function(){
  				window.location.reload();
  			}, 500);
      </script>
    <% end %>
    <style type="text/css" media="screen">
      #container {
				width: 500px;
				height: 200px;
				position: absolute;
				top: 50%;
				left: 50%;
				margin: -100px 0 0 -250px;
				font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
				font-size: 16px;
				text-align: center;
			}
    </style>
  </head>
  <body>
    <div id="container">
      <% if @pending %>
				<p>
					Your export will appear shortly.
					You can start another export while this one is being created.
				</p>
				<p>
					Elapsed time: <%= (Time.now.utc - @export_data.created_at.to_i).strftime('%T') %>
				</p>
			<% elsif @link %>
				<%= link_to 'View Export', @link %>
			<% else %>
				Your export could not be created. Please try again.
			<% end %>
    </div>
  </body>
</html>